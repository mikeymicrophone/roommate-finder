<% form_for @chore do |f| %>
	<%= f.text_field :name %>
	<%= f.label :name %><br>
	<%= f.select :manager_id, Manager.all.map { |m| [m.name, m.id] }, :include_blank => true %>
	<%= f.label :manager_id %><br>
	<%= f.select :unit_id, Unit.all.map { |u| [u.name, u.id] }, :include_blank => true %>
	<%= f.label :unit_id %><br>
	<%= f.text_area :comments, :size => '40x4' %>
	<%= f.label :comments %><br>
	<%= f.submit %>
<% end %>